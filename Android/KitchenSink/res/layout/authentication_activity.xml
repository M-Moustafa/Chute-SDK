<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout
    android:id="@+id/linearLayoutButtons"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_width="fill_parent">
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/buttonFacebook"
      android:layout_weight="1" android:text="Facebook"></Button>
    <Button
      android:layout_height="wrap_content"
      android:layout_width="0dp"
      android:id="@+id/buttonEvernote"
      android:layout_weight="1" android:text="Evernote"></Button>
    <Button
      android:layout_height="wrap_content"
      android:layout_width="0dp"
      android:id="@+id/buttonChute"
      android:layout_weight="1" android:text="Chute"></Button>
  </LinearLayout>
  <android.webkit.WebView
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/webViewAuthentication"></android.webkit.WebView>
</LinearLayout>
