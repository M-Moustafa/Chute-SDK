<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/linearLayoutRoot">
    <RelativeLayout
    android:background="@drawable/header_background_tileable"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayoutHolderTop">
    <TextView
      android:gravity="center"
      android:layout_centerInParent="true"
      android:layout_marginRight="40dp"
      android:layout_width="fill_parent"
      android:textColor="@color/white"
      android:layout_height="40dp"
      android:layout_marginLeft="40dp"
      android:ellipsize="end"
      android:lines="1" android:id="@+id/textTitle"></TextView>
    <Button android:layout_marginBottom="25dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_height="40dp" android:layout_width="wrap_content" android:text="Upload" android:padding="10dp" android:id="@+id/buttonUpload"></Button>
  </RelativeLayout>
</LinearLayout>