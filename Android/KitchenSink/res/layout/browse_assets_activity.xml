<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res/com.chute.examples.kitchensink"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
   <RelativeLayout
    android:background="@drawable/header_background_tileable"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayoutHolderTop">
    <TextView
      android:gravity="center"
      android:layout_centerInParent="true"
      android:layout_marginRight="40dp"
      android:layout_width="fill_parent"
      android:id="@+id/textFullscreenChuteName"
      android:textColor="@color/white"
      android:layout_height="40dp"
      android:layout_marginLeft="40dp"
      android:ellipsize="end"
      android:lines="1"></TextView>
    <ImageButton
      android:layout_marginBottom="25dp"
      android:layout_width="40dp"
      android:scaleType="fitXY"
      android:padding="2dp"
      android:layout_height="40dp"
      android:layout_alignParentRight="true"
      android:background="@drawable/fullscreen_thumb_view"
      android:layout_centerVertical="true"
      android:id="@+id/buttonGrid"></ImageButton>
  </RelativeLayout>
  <com.chute.examples.kitchensink.utils.views.GalleryViewFlipper
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/viewFlipper">
    <FrameLayout
      android:id="@+id/frameLayoutWrapper"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
      <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBarAssets"
        android:layout_width="100dp"
        android:layout_height="100dp"></ProgressBar>
      <com.chute.examples.kitchensink.utils.views.viewflow.ViewFlow
        android:duplicateParentState="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/viewFlow"></com.chute.examples.kitchensink.utils.views.viewflow.ViewFlow>
    </FrameLayout>
  </com.chute.examples.kitchensink.utils.views.GalleryViewFlipper>
</LinearLayout>